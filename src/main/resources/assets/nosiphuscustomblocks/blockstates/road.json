{
  "multipart": [
    {
      "when": { "axis": "z" },
      "apply": { "model": "nosiphuscustomblocks:block/road/asphalt" }
    },
    {
      "when": { "axis": "x" },
      "apply": { "model": "nosiphuscustomblocks:block/road/asphalt", "y": 90, "uvlock": true }
    },

    { "when": { "texture": "single", "axis": "z" }, "apply": { "model": "nosiphuscustomblocks:block/road/single" } },
    { "when": { "texture": "single", "axis": "x" }, "apply": { "model": "nosiphuscustomblocks:block/road/single", "y": 90 } },

    { "when": { "texture": "shoulder_left", "axis": "z" }, "apply": { "model": "nosiphuscustomblocks:block/road/shoulder_left" } },
    { "when": { "texture": "shoulder_left", "axis": "x" }, "apply": { "model": "nosiphuscustomblocks:block/road/shoulder_left", "y": 90 } },

    { "when": { "texture": "shoulder_right", "axis": "z" }, "apply": { "model": "nosiphuscustomblocks:block/road/shoulder_right" } },
    { "when": { "texture": "shoulder_right", "axis": "x" }, "apply": { "model": "nosiphuscustomblocks:block/road/shoulder_right", "y": 90 } },

    { "when": { "texture": "divider", "axis": "z" }, "apply": { "model": "nosiphuscustomblocks:block/road/divider" } },
    { "when": { "texture": "divider", "axis": "x" }, "apply": { "model": "nosiphuscustomblocks:block/road/divider", "y": 90 } },

    { "when": { "texture": "divider_left", "axis": "z" }, "apply": { "model": "nosiphuscustomblocks:block/road/divider_left" } },
    { "when": { "texture": "divider_left", "axis": "x" }, "apply": { "model": "nosiphuscustomblocks:block/road/divider_left", "y": 90 } },

    { "when": { "texture": "divider_right", "axis": "z" }, "apply": { "model": "nosiphuscustomblocks:block/road/divider_right" } },
    { "when": { "texture": "divider_right", "axis": "x" }, "apply": { "model": "nosiphuscustomblocks:block/road/divider_right", "y": 90 } },

    { "when": { "texture": "shoulder_left_divider", "axis": "z" }, "apply": { "model": "nosiphuscustomblocks:block/road/shoulder_left_divider" } },
    { "when": { "texture": "shoulder_left_divider", "axis": "x" }, "apply": { "model": "nosiphuscustomblocks:block/road/shoulder_left_divider", "y": 90 } },

    { "when": { "texture": "shoulder_right_divider", "axis": "z" }, "apply": { "model": "nosiphuscustomblocks:block/road/shoulder_right_divider" } },
    { "when": { "texture": "shoulder_right_divider", "axis": "x" }, "apply": { "model": "nosiphuscustomblocks:block/road/shoulder_right_divider", "y": 90 } },

    { "when": { "texture": "lane", "axis": "z" }, "apply": { "model": "nosiphuscustomblocks:block/road/lane" } },
    { "when": { "texture": "lane", "axis": "x" }, "apply": { "model": "nosiphuscustomblocks:block/road/lane", "y": 90 } }
  ]
}